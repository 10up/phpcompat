{
	"name": "wpengine/phpcompat",
	"type": "wordpress-plugin",
	"description": "Test PHP Compatibility.",
	"authors": [{
		"name": "Jason Stallings",
		"email": "jason@stallin.gs"
	}],
	"require": {
		"squizlabs/php_codesniffer": "*",
		"wimg/php-compatibility": "^8.0"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "dev-master",
		"neronmoon/scriptsdev": "^0.1.0"
	},
	"scripts": {
		"post-update-cmd": "vendor/bin/phpcs --config-delete installed_paths; rm -rf vendor/squizlabs/php_codesniffer/src/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility vendor/squizlabs/php_codesniffer/src/Standards/PHPCompatibility",
		"post-install-cmd": "vendor/bin/phpcs --config-delete installed_paths; rm -rf vendor/squizlabs/php_codesniffer/src/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility vendor/squizlabs/php_codesniffer/src/Standards/PHPCompatibility"
	},
	"extra": {
		"scripts-dev": {
			"post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/;",
			"post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/;"
		}
	}
}
