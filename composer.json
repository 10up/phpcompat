{
	"name": "wpengine/phpcompat",
	"type": "wordpress-plugin",
	"description": "Test PHP Compatibility.",
	"authors": [{
		"name": "Jason Stallings",
		"email": "jason@stallin.gs"
	}],
	"require": {
		"squizlabs/php_codesniffer": "2.9.*",
		"wimg/php-compatibility": "^8",
		"simplyadmire/composer-plugins" : "@dev"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "0.10",
		"neronmoon/scriptsdev": "^0.1.0"
	},
	"scripts": {
		"post-update-cmd": [
			"cd php52; composer update; cd ..",
			"vendor/bin/phpcs --config-delete installed_paths",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility/PHPCompatibility vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility"
		],
		"post-install-cmd": [
			"cd php52; composer update; cd ..",
			"vendor/bin/phpcs --config-delete installed_paths",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility/PHPCompatibility vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility"
		]
	},
	"scripts-dev": {
		"post-update-cmd": [
			"cd php52; composer update; cd ..",
			"vendor/bin/phpcs --config-delete installed_paths",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility/PHPCompatibility vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress; cp -rp vendor/wp-coding-standards/wpcs/WordPress vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Core vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Docs vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Extra vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP; cp -rp vendor/wp-coding-standards/wpcs/WordPress-VIP vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP"
		],
		"post-install-cmd": [
			"cd php52; composer update; cd ..",
			"vendor/bin/phpcs --config-delete installed_paths",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility; cp -rp vendor/wimg/php-compatibility/PHPCompatibility vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress; cp -rp vendor/wp-coding-standards/wpcs/WordPress vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Core vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Docs vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra; cp -rp vendor/wp-coding-standards/wpcs/WordPress-Extra vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra",
			"rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP; cp -rp vendor/wp-coding-standards/wpcs/WordPress-VIP vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP"
		]
	}
}
