{
	"name": "wpengine/phpcompat",
	"type": "wordpress-plugin",
	"description": "Test PHP Compatibility.",
	"authors": [{
		"name": "Jason Stallings",
		"email": "jason@stallin.gs"
	}],
	"require": {
		"squizlabs/php_codesniffer": "2.9.*",
		"wimg/php-compatibility": "^8.0"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "dev-master",
		"neronmoon/scriptsdev": "^0.1.0"
	},
	"scripts": {
		"post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wimg/php-compatibility/",
		"post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wimg/php-compatibility/"
	},
	"extra": {
		"scripts-dev": {
			"post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/,vendor/wimg/php-compatibility/",
			"post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/,vendor/wimg/php-compatibility/"
		}
	}
}
